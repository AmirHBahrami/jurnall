<VBox prefHeight="291.0" prefWidth="368.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="242.0" prefWidth="341.0" VBox.vgrow="ALWAYS">
         <children>
            <TextField fx:id="usernameTextField" layoutX="151.0" layoutY="43.0" prefHeight="30.0" prefWidth="171.0" style="-fx-prompt-text-fill: #566c4f; -fx-background-color: #21273e; -fx-control-inner-background: #566c4f; -fx-text-fill: greenyellow; -fx-font-size: 16;" />
            <Label layoutX="42.0" layoutY="43.0" prefHeight="30.0" prefWidth="95.0" style="-fx-fill: greenyellow; -fx-text-fill: greenyellow; -fx-font-size: 16; -fx-background-color: #21273e; -fx-background-radius: 5; -fx-padding: 3;" text=" Username" />
            <Label layoutX="42.0" layoutY="89.0" prefHeight="30.0" prefWidth="95.0" style="-fx-text-fill: greenyellow; -fx-font-size: 16; -fx-background-color: #21273e; -fx-background-radius: 5; -fx-padding: 3;" text=" Password" />
